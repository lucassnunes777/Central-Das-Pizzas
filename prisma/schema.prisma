// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  phone     String?
  cpf       String?  @unique
  password  String?
  role      String   @default("CLIENT")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  addresses Address[]
  orders    Order[]
  sessions  Session[]
  accounts  Account[]
  notifications Notification[]
  ifoodSettings IfoodSettings?

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

model Address {
  id          String  @id @default(cuid())
  userId      String
  street      String
  number      String
  complement  String?
  neighborhood String
  city        String
  state       String
  zipCode     String
  isDefault   Boolean @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  orders Order[]

  @@map("addresses")
}

model Category {
  id          String   @id @default(cuid())
  name        String
  description String?
  image       String?
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  combos Combo[]

  @@map("categories")
}

model Combo {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  image       String?
  isActive    Boolean  @default(true)
  categoryId  String
  isPizza     Boolean  @default(false)
  allowCustomization Boolean @default(false)
  pizzaQuantity Int    @default(1) // Quantidade de pizzas no combo (1 ou 2)
  showFlavors Boolean  @default(true) // Controla se sabores aparecem na personalização
  order       Int      @default(0) // Ordem de exibição (menor número aparece primeiro)
  isBurger    Boolean  @default(false) // Identifica se é hambúrguer
  burgerArtisanalPrice Float? // Preço do hambúrguer artesanal (se diferente do preço base)
  burgerIndustrialPrice Float? // Preço do hambúrguer industrial (se diferente do preço base)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  category Category @relation(fields: [categoryId], references: [id])
  items    OrderItem[]
  sizes    PizzaSize[]
  customizationItems ComboCustomizationItem[]

  @@unique([name, categoryId])
  @@map("combos")
}

model ComboCustomizationItem {
  id          String   @id @default(cuid())
  comboId     String
  name        String
  description String?
  type        String   // PIZZA, DRINK, SIDE, DESSERT
  isRequired  Boolean  @default(false)
  isMultiple  Boolean  @default(false)
  maxSelections Int?   // Máximo de seleções (para múltiplas escolhas)
  minSelections Int    @default(1) // Mínimo de seleções
  order       Int      @default(0) // Ordem de exibição
  image       String?  // Foto do item
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  combo Combo @relation(fields: [comboId], references: [id], onDelete: Cascade)
  options ComboCustomizationOption[]

  @@map("combo_customization_items")
}

model ComboCustomizationOption {
  id          String   @id @default(cuid())
  itemId      String
  name        String
  description String?
  price       Float    @default(0) // Valor adicional
  image       String?  // Foto da opção
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  item ComboCustomizationItem @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@map("combo_customization_options")
}

model PizzaSize {
  id        String @id @default(cuid())
  comboId   String
  name      String // "Pequena", "Média", "Grande", "Família"
  slices    Int    // 4, 6, 8, 13
  maxFlavors Int   // 2, 2, 3, 4
  basePrice Float
  isActive  Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  combo      Combo       @relation(fields: [comboId], references: [id], onDelete: Cascade)
  orderItems OrderItem[]

  @@map("pizza_sizes")
}

model PizzaFlavor {
  id          String @id @default(cuid())
  name        String
  description String
  type        String // "TRADICIONAL", "PREMIUM", "ESPECIAL"
  isActive    Boolean @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("pizza_flavors")
}

model Order {
  id            String        @id @default(cuid())
  userId        String
  addressId     String?
  total         Float
  status        String        @default("PENDING")
  paymentMethod String
  deliveryType  String
  notes         String?
  ifoodOrderId  String?
  confirmedAt   DateTime?
  confirmedBy   String?
  cancelledAt   DateTime?
  cancelledBy   String?
  deliveredAt   DateTime?
  deliveredBy   String?
  deliveryPerson String?      // Nome do motoboy/entregador
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  user     User        @relation(fields: [userId], references: [id])
  address  Address?    @relation(fields: [addressId], references: [id])
  items    OrderItem[]
  cashLogs CashLog[]
  notifications Notification[]

  @@map("orders")
}

model OrderItem {
  id           String @id @default(cuid())
  orderId      String
  comboId      String
  quantity     Int
  price        Float
  pizzaSizeId  String?
  selectedFlavors String? // JSON array of flavor IDs
  observations String?
  extras       String?    // JSON for additional charges (premium, especial)

  order     Order     @relation(fields: [orderId], references: [id], onDelete: Cascade)
  combo     Combo     @relation(fields: [comboId], references: [id])
  pizzaSize PizzaSize? @relation(fields: [pizzaSizeId], references: [id])
  orderItemExtras OrderItemExtra[]

  @@map("order_items")
}

model CashLog {
  id          String   @id @default(cuid())
  orderId     String?
  type        String   // OPEN, CLOSE, ORDER, ORDER_CONFIRMED, ORDER_CANCELLED, ORDER_PRINTED
  amount      Float
  description String?
  isFavorite  Boolean  @default(false) // Marcar como favorito
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  order Order? @relation(fields: [orderId], references: [id])

  @@map("cash_logs")
}

model SystemSettings {
  id                String   @id @default(cuid())
  restaurantName    String
  restaurantAddress String?
  restaurantPhone   String?
  restaurantEmail   String?
  restaurantLogo    String?
  restaurantBanner  String?
  profileLogo       String?  // Logo para exibir no site
  deliveryEstimate  String?  @default("35 - 70min")
  isOpen            Boolean  @default(true)
  openingHours      String?
  ifoodApiKey       String?
  ifoodApiSecret    String?
  printerIp         String?
  printerPort       String?
  printerName       String?  // Nome da impressora USB (ex: "ELGIN i8")
  printerSerialPort String?  // Dados da porta serial selecionada (JSON)
  autoPrint         Boolean  @default(true)
  taxRate           Float    @default(0)
  deliveryFee       Float    @default(0)
  minOrderValue     Float    @default(0)
  autoCloseTime     String?  @default("23:00")
  autoCloseEnabled  Boolean  @default(false)
  premiumFlavorPrice Float    @default(15.00)
  especialFlavorPrice Float   @default(20.00)
  stuffedCrustPrice Float    @default(4.99)
  // WhatsApp Integration
  whatsappProvider   String?  // 'evolution', 'business', 'twilio'
  whatsappApiUrl     String?  // URL da API (Evolution API)
  whatsappApiKey     String?  // API Key
  whatsappInstanceName String? // Nome da instância (Evolution API)
  whatsappPhoneNumberId String? // Phone Number ID (Business API)
  whatsappAccessToken String? // Access Token (Business API)
  whatsappBusinessAccountId String? // Business Account ID
  whatsappConnected   Boolean @default(false) // Status da conexão
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@map("system_settings")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  orderId   String?
  type      String   // NEW_ORDER, ORDER_UPDATE, SYSTEM
  source    String   // IFOOD, SYSTEM
  title     String
  message   String
  logo      String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  order Order? @relation(fields: [orderId], references: [id])

  @@map("notifications")
}

model IfoodSettings {
  id                   String   @id @default(cuid())
  userId               String
  apiUrl               String
  apiKey               String
  merchantId           String
  autoPrint            Boolean  @default(false)
  autoAccept           Boolean  @default(false)
  notificationsEnabled Boolean  @default(true)
  webhookUrl           String?
  logo                 String?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId])
  @@map("ifood_settings")
}

model DeliveryPerson {
  id        String   @id @default(cuid())
  name      String
  phone     String
  plate     String?  // Placa da moto (opcional)
  status    String   @default("OFFLINE") // OFFLINE, ONLINE, DELIVERING, UNAVAILABLE, OUT_OF_ROUTE
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("delivery_persons")
}

model ExtraItem {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  category    String   // "DRINK", "SIDE", "DESSERT", "SAUCE"
  size        String?   // "300ML", "1L", "2L" para bebidas
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orderItems OrderItemExtra[]

  @@map("extra_items")
}

model OrderItemExtra {
  id           String @id @default(cuid())
  orderItemId  String
  extraItemId  String
  quantity     Int    @default(1)

  orderItem OrderItem @relation(fields: [orderItemId], references: [id], onDelete: Cascade)
  extraItem ExtraItem @relation(fields: [extraItemId], references: [id])

  @@map("order_item_extras")
}

model DeliveryArea {
  id          String   @id @default(cuid())
  name        String   // Nome do bairro/área
  city        String   // Cidade
  state       String   // Estado
  zipCode     String?  // CEP (opcional)
  deliveryFee Float    // Taxa de entrega específica
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([name, city, state])
  @@map("delivery_areas")
}

model ChatbotTemplate {
  id          String   @id @default(cuid())
  name        String   // Nome do template (ex: "Pedido Confirmado")
  trigger     String   // Trigger/evento (ex: "ORDER_CONFIRMED", "ORDER_READY")
  message     String   // Mensagem do template (suporta variáveis como {customerName}, {orderNumber})
  isActive    Boolean  @default(true)
  order       Int      @default(0) // Ordem de exibição
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([trigger])
  @@map("chatbot_templates")
}